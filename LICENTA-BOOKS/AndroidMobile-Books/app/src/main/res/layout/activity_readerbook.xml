<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ReaderBookActivity">

    <RelativeLayout
        android:id="@+id/readerRelativeLayout"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
   />

    <include
        android:id="@+id/toolbar_top"
        layout="@layout/toolbar_layout"/>

    <include
        android:id="@+id/toolbar_bottom"
        layout="@layout/toolbar_layout_bottom" />
    <include
        android:id="@+id/selectionButtonsPopup"
        layout="@layout/selection_buttons_popup"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include
            android:id="@+id/relative_test"
            layout="@layout/style_layout"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/search_layout"
            layout="@layout/layout_search"
            android:visibility="invisible"/>
    </RelativeLayout>


</RelativeLayout>