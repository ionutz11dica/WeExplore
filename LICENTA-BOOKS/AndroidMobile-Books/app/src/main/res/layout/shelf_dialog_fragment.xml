<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.DialogFragments.FontsDialogFragment"
    android:layout_gravity="top|center"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_gravity="center"

        android:orientation="vertical">

        <EditText
            android:id="@+id/et_shelf_create"
            android:layout_margin="20dp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textCursorDrawable="@color/granite"
            android:backgroundTint="@color/granite"
            android:fontFamily="@font/crimsontext"
            android:singleLine="true"
            android:focusable="true"
            android:hint="Shelf name" />

        <Button
            android:id="@+id/btn_create_shelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@drawable/white"
            android:text="Create Shelf"
            android:background="#4b2b30"
            android:fontFamily="@font/crimsontext"/>

    </LinearLayout>


</LinearLayout>