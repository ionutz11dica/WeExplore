<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@drawable/layout_radious"
    app:layout_constraintCircleRadius="10dp"
    android:elevation="10dp"
    android:padding="4dp"
    tools:targetApi="lollipop">
    
    <LinearLayout
        android:id="@+id/highlightColorLinearLayout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/highlight_yellow"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/highlight_btn_yellow"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/highlight_green"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/highlight_btn_green"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/highlight_pink"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/highlight_btn_pink"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/highlight_blue"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/highlight_btn_blue"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/highlight_orange"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/highlight_btn_orange"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_highlight"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="@color/granite"
        android:layout_below="@id/highlightColorLinearLayout"
        />

    <LinearLayout
        android:id="@+id/options_content"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_highlight"
        android:weightSum="5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_note"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#f1f1f2"
            android:fontFamily="@font/crimsontext"
            android:text="Note"
            android:textSize="13dp" />


        <Button
            android:id="@+id/btn_define"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#f1f1f2"
            android:fontFamily="@font/crimsontext"
            android:text="define"
            android:textSize="13dp" />
        <Button
            android:id="@+id/btn_share"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#f1f1f2"
            android:fontFamily="@font/crimsontext"
            android:text="share"
            android:textSize="13dp" />
        <Button
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#f1f1f2"
            android:fontFamily="@font/crimsontext"
            android:text="search"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btn_audio"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/ic_play_arrow_black_10dp"
             />

    </LinearLayout>

</RelativeLayout>