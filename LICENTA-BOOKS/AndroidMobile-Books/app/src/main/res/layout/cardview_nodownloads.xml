<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="30dp"
    android:elevation="10dp"
    android:layout_height="110dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_card_view_downloaded"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="The Most Downloaded &#10; Books this Week"
            android:fontFamily="@font/crimsontext"
            android:textColor="@drawable/dark_grey"
            android:gravity="center"
            android:textSize="25dp"
            tools:ignore="HardcodedText" />

         <View
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_margin="7dp"
             android:background="@drawable/dark_grey" />

            <TextView
                android:id="@+id/tv_no_downloads"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/crimsontext"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:text="0 Downloads"
                android:textColor="@color/book_title"
                android:textSize="16dp"

                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>