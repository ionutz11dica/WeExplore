<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/test_id2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:background="#ece8d9"
    android:layout_gravity="bottom">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:background="#333644"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:background="@color/granite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Brightness"
                android:fontFamily="@font/crimsontext"
                android:textSize="16dp" />

            <SeekBar
                android:id="@+id/brightness_seeker"
                android:layout_width="0dp"
                android:thumbTint="#fff"
                android:progressTint="#fff"
                android:layout_height="wrap_content"
                android:layout_weight="0.87" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="#fff"
                android:fontFamily="@font/crimsontext"
                android:textSize="16dp"
                android:text="Fonts"
                 />

            <ImageButton
                android:id="@+id/font_minus"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="0.41"
                android:background="@drawable/fonts_btn"
                android:padding="10dp"
                android:src="@drawable/ic_font_size" />

            <ImageButton
                android:id="@+id/font_plus"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.41"
                android:background="@drawable/fonts_btn"
                android:padding="10dp"
                android:src="@drawable/ic_capital_t" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"

            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Typeface"
                android:fontFamily="@font/crimsontext"
                android:textSize="16dp" />

            <Button
                android:id="@+id/typeface_btn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="0.85"
                android:fontFamily="@font/crimsontext"
                android:background="@drawable/fonts_btn"
                android:padding="10dp"
                android:text="typeface"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"

            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Background"
                android:fontFamily="@font/crimsontext"
                android:textSize="16dp" />

            <Button
                android:id="@+id/background_btn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="0.85"
                android:background="@drawable/fonts_btn"
                android:padding="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"

            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="10dp"
                android:text="Text Color"
                android:textColor="#fff"
                android:fontFamily="@font/crimsontext"
                android:textSize="16dp"/>

            <Button
                android:id="@+id/textcolor_btn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"

                android:layout_weight="0.85"
                android:background="@drawable/fonts_btn"
                android:padding="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="10dp"
                android:text="Spacing"
                android:textColor="#fff"
                android:fontFamily="@font/crimsontext"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/line_spacing_minus"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="0.41"
                android:background="@drawable/fonts_btn"
                android:padding="10dp"
                android:textColor="#fff"
                android:src="@drawable/ic_line_spacing_text" />

            <ImageButton
                android:id="@+id/line_spacing_plus"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.41"
                android:background="@drawable/fonts_btn"
                android:padding="10dp"
                android:src="@drawable/ic_spacing" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>