<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imv_cover_genre"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#000"
            android:textAlignment="center"
            android:fontFamily="@font/crimsontext"
            android:text="titlu"/>

        <TextView
            android:id="@+id/tv_authors_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:ellipsize="end"
            android:textAlignment="center"
            android:maxLines="1"
            android:fontFamily="@font/crimsontext"
            android:text="autori"/>
        <TextView
            android:id="@+id/tv_no_downloads_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:ellipsize="end"
            android:textAlignment="center"
            android:maxLines="1"
            android:fontFamily="@font/crimsontext"
            android:text="noDownloads"/>

        <Button
            android:id="@+id/btn_wants_to_read"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_gravity="center"



            android:fontFamily="@font/crimsontext"
            android:text="Want to read"
            android:textAllCaps="false"
            android:textColor="@drawable/white"
            android:textSize="14dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#1abb9c"/>

    </LinearLayout>

</LinearLayout>